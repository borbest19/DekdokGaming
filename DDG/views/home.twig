{% extends 'layout/base.twig' %}

{% block stylesheet %}
  <link rel="stylesheet" href="/assets/home.css">

{% endblock %}

{% block content %}

  <body>

    <main>
      <br>
      <div class="slideshow-container is-paddingless">
        <div class="mySlides fade">
          <div class="numbertext">1 / 3</div>
          <img src="/assets/images/Home_B1.jpg" style="width:100%">

        </div>

        <div class="mySlides fade">
          <div class="numbertext">2 / 3</div>
          <img src="/assets/images/Home_B2.jpg" style="width:100%">

        </div>

        <div class="mySlides fade">
          <div class="numbertext">3 / 3</div>
          <img src="/assets/images/Home_B3.jpg" style="width:100%">

        </div>

        <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
        <a class="next" onclick="plusSlides(1)">&#10095;</a>
      </div>
      <br>

      <div style="text-align:center">
        <span class="dot" onclick="currentSlide(1)"></span>
        <span class="dot" onclick="currentSlide(2)"></span>
        <span class="dot" onclick="currentSlide(3)"></span>
      </div>
      <script>
        var slideIndex = 1;
        showSlides(slideIndex);

        function plusSlides(n) {
          showSlides(slideIndex += n);
        }

        function currentSlide(n) {
          showSlides(slideIndex = n);
        }

        function showSlides(n) {
          var i;
          var slides = document.getElementsByClassName("mySlides");
          var dots = document.getElementsByClassName("dot");
          if (n > slides.length) {
            slideIndex = 1
          }
          if (n < 1) {
            slideIndex = slides.length
          }
          for (i = 0; i < slides.length; i++) {
            slides[i].style.display = "none";
          }
          for (i = 0; i < dots.length; i++) {
            dots[i].className = dots[i].className.replace(" active", "");
          }
          slides[slideIndex - 1].style.display = "block";
          dots[slideIndex - 1].className += " active";
        }
      </script>
      <img src="/assets/images/NewNews.png">
      <br><br>
      <section>
        <div class="thumbnail">
          <div class="columns is-maginless">
            <img class="column thumbnail-item is-paddingless" src="/assets/images/banner.jpg">
            <img class="column thumbnail-item is-paddingless" src="/assets/images/1.jpg">
            <img class="column thumbnail-item is-paddingless" src="/assets/images/thumbnail-3.jpg">
            <img class="column thumbnail-item is-paddingless" src="/assets/images/thumbnail-4.jpg">
          </div>
        </div>
      </section>
      <br><br>
      <img src="/assets/images/Review.png">
      <br><br>
      <section>
        <div class="thumbnail">
          <div class="columns is-maginless">
            <img class="column thumbnail-item is-paddingless" src="/assets/images/banner.jpg">
            <img class="column thumbnail-item is-paddingless" src="/assets/images/1.jpg">
            <img class="column thumbnail-item is-paddingless" src="/assets/images/thumbnail-3.jpg">
            <img class="column thumbnail-item is-paddingless" src="/assets/images/thumbnail-4.jpg">
          </div>
        </div>
      </section>
    </main>
